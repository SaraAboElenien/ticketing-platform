{
  "version": 2,
  "installCommand": "npm install && npx esbuild apps/api/src/handler.ts --bundle --platform=node --target=node18 --outfile=apps/api/dist/handler.js --external:bcrypt",
  "builds": [
    {
      "src": "apps/api/dist/handler.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/api/dist/handler.js"
    }
  ]
}

