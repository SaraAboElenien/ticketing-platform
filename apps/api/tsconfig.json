{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@ticketing-platform/shared": ["../../packages/shared/src/index.ts"]
    }
  },
  "include": ["src/**/*", "scripts/**/*", "../../packages/shared/src/**/*"],
  "exclude": ["node_modules", "dist"]
}

